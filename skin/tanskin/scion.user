  <thing id="fSciRagGrc" name="Rage and  Grace" description="Your Scion class powers have the Primal power source instead of the Divine power source.\n\nAs long as you wield a two-handed weapon and are not using a shield, you gain a +2 bonus to AC and Reflex." compset="ClassFeat" uniqueness="unique">
    <usesource source="SkEscarnun"/>
    <tag group="AtLevel" tag="1" name="1" abbrev="1"/>
    <eval phase="Setup" priority="1000"><![CDATA[
      ~+2 AC and Ref while wielding a two-handed weapon
      foreach pick in hero from WeaponBase where "Equipment.TwoHand"
        #traitmodify[defAC,trtBonus,2,""]
        #traitmodify[defRef,trtBonus,2,""]
        nexteach]]></eval>
    </thing>
